<div class="album py-5 bg-light">
	<div class="container">
		<div class="row">
            {{#each articles}}
			<div class="col-md-4">
				<div class="card mb-4 box-shadow">
					<img alt="{{this.title}}" class="card-img-top" src="{{this.image}}">
					<div class="card-body">
                         <h6 class="card-title">{{this.title}}</h6>
						<p class="card-text">{{this.summary}}</p>
						<div class="d-flex justify-content-between align-items-end">
							<div class="btn-group">
								<button class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#mod{{this.id}}" type="button">Comments (<span class="ctn{{this.id}}">{{this.comments.length}}</span>)</button>
							</div><small class="stext-muted"><a target="_blank" href="{{this.link}}">Read more...</a></small>
						</div>
					</div>
				</div>
			</div>
            {{/each}}
		</div>
	</div>
</div>