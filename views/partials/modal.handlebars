<div id="modals">
{{#each articles}}
<div class="modal fade" id="mod{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content" id="con{{this.id}}">
      <div class="modal-header">
        <h6 class="modal-title" id="exampleModalLabel">{{this.title}}</h6>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="comment-body">
        {{#each this.comments}}
        <div class="alert alert-warning" role="alert">
         <span class="name">{{this.user}}:</span> {{this.comment}}
         <button type="button" class="close delete-comment" data-dismiss="alert" aria-label="Close">
         <span data-id="{{this._id}}" data-aid="{{../this.id}}" aria-hidden="true">&times;</span>
         </button>
        </div>
        {{/each}}
        </div>
        <form class="form-{{this.id}}">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Your Name:</label>
            <input type="text" class="form-control" id="name" required>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Comment:</label>
            <textarea class="form-control" id="comment" required></textarea>
          </div>
        </form>
        <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <button type="submit" data-id="{{this.id}}" class="btn btn-success submit-comment">Add Comment</button>
      </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>